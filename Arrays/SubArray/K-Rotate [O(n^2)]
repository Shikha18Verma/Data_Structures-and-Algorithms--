#include<bits/stdc++.h>
using namespace std;
int functionToRotateByK(int arr[], int k, int n){
    for(int i=1; i<=k; i++){
       int lastVal = arr[6];
       for(int j=n-2; j>=0; j--){
           arr[j+1] = arr[j]; 
       }
       arr[0] = lastVal;
   }
   for(int i = 0; i<n; i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
   return 0;
}
int main()
{
   int arr[] = {1,2,3,4,5,6,7};
    
    int n = sizeof(arr)/sizeof(int);
    for(int i = 0; i<n; i++){
        cout<<arr[i]<<" ";
    }
    cout<<endl;
    cout<<"the array after rotation is : ";
    functionToRotateByK(arr, 4, n);
     
    return 0;
}
