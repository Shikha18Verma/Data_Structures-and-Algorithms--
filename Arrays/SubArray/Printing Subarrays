//Printing all subarrays

#include <iostream>

using namespace std;

int subarrays(int arr[], int n){

    for(int i=0; i<n; i++){

        for(int j=i; j<n; j++){

            for(int k=i; k<j; k++){

                cout<<arr[k]<<" ";

            }

            cout<<endl;

        }

    }

}

int main()

{

    int arr[] = {1,2,3,4,5,6,7};

    int n = sizeof(arr)/sizeof(int);

    cout<<"array ";

    for(int i=0; i<n; i++){

        cout<<arr[i]<<" ";

    }

    cout<<endl;

    subarrays(arr, n);

    

}
